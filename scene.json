{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Scene",
  "description": "A scene to render.\n\nThis is a root object in a scene TOML file.",
  "type": "object",
  "required": [
    "ambient_spectrum"
  ],
  "properties": {
    "ambient_spectrum": {
      "description": "Scene background and ambient color.",
      "allOf": [
        {
          "$ref": "#/definitions/Spectrum"
        }
      ]
    },
    "camera": {
      "$ref": "#/definitions/Camera"
    },
    "refractive_index": {
      "description": "Scene medium refractive index.\n\nThis index is assigned for the primary incident rays originating from the camera.",
      "default": 1.0,
      "type": "number",
      "format": "double"
    },
    "surfaces": {
      "description": "Surfaces to render.",
      "type": "array",
      "items": {
        "$ref": "#/definitions/Surface"
      }
    }
  },
  "definitions": {
    "Aabb": {
      "description": "Axis-aligned boundary box defined by two points: the one with the minimal coordinates, and the other – with the maximal coordinates.",
      "type": "object",
      "required": [
        "max_point",
        "min_point"
      ],
      "properties": {
        "max_point": {
          "$ref": "#/definitions/Point"
        },
        "min_point": {
          "$ref": "#/definitions/Point"
        }
      }
    },
    "Attenuation": {
      "oneOf": [
        {
          "type": "object",
          "required": [
            "coefficient",
            "type"
          ],
          "properties": {
            "coefficient": {
              "type": "number",
              "format": "double"
            },
            "type": {
              "type": "string",
              "enum": [
                "Constant"
              ]
            }
          }
        },
        {
          "description": "Empirical approximation based on <https://en.wikipedia.org/wiki/Electromagnetic_absorption_by_water#/media/File:Absorption_coefficient_of_water.svg>.",
          "type": "object",
          "required": [
            "scale",
            "type"
          ],
          "properties": {
            "scale": {
              "type": "number",
              "format": "double"
            },
            "type": {
              "type": "string",
              "enum": [
                "WaterAbsorption"
              ]
            }
          }
        }
      ]
    },
    "Camera": {
      "type": "object",
      "properties": {
        "location": {
          "$ref": "#/definitions/Point"
        },
        "look_at": {
          "$ref": "#/definitions/Point"
        },
        "up": {
          "description": "Up direction.",
          "default": [
            0.0,
            1.0,
            0.0
          ],
          "type": "array",
          "items": {
            "type": "number",
            "format": "double"
          },
          "maxItems": 3,
          "minItems": 3
        },
        "vertical_fov": {
          "description": "Vertical field-of-view angle, in degrees.",
          "default": 45.0,
          "type": "number",
          "format": "double"
        }
      }
    },
    "Material": {
      "type": "object",
      "properties": {
        "emittance": {
          "anyOf": [
            {
              "$ref": "#/definitions/Spectrum"
            },
            {
              "type": "null"
            }
          ]
        },
        "reflectance": {
          "anyOf": [
            {
              "$ref": "#/definitions/Reflectance"
            },
            {
              "type": "null"
            }
          ]
        },
        "transmittance": {
          "anyOf": [
            {
              "$ref": "#/definitions/Transmittance"
            },
            {
              "type": "null"
            }
          ]
        }
      }
    },
    "Point": {
      "type": "array",
      "items": {
        "type": "number",
        "format": "double"
      },
      "maxItems": 3,
      "minItems": 3
    },
    "Reflectance": {
      "type": "object",
      "properties": {
        "attenuation": {
          "description": "Attenuation of the interface surface.",
          "allOf": [
            {
              "$ref": "#/definitions/Spectrum"
            }
          ]
        },
        "diffusion": {
          "default": null,
          "type": [
            "number",
            "null"
          ],
          "format": "double"
        },
        "fuzz": {
          "default": null,
          "type": [
            "number",
            "null"
          ],
          "format": "double"
        }
      }
    },
    "RefractiveIndex": {
      "description": "Absolute refraction index.\n\nBy default, it is of vacuum.",
      "oneOf": [
        {
          "type": "object",
          "required": [
            "index",
            "type"
          ],
          "properties": {
            "index": {
              "type": "number",
              "format": "double"
            },
            "type": {
              "type": "string",
              "enum": [
                "Constant"
              ]
            }
          }
        },
        {
          "description": "https://en.wikipedia.org/wiki/Cauchy%27s_equation",
          "type": "object",
          "required": [
            "coefficients",
            "type"
          ],
          "properties": {
            "coefficients": {
              "type": "array",
              "items": {
                "type": "number",
                "format": "double"
              }
            },
            "type": {
              "type": "string",
              "enum": [
                "Cauchy"
              ]
            }
          }
        },
        {
          "type": "object",
          "required": [
            "a",
            "b",
            "type"
          ],
          "properties": {
            "a": {
              "type": "number",
              "format": "double"
            },
            "b": {
              "type": "number",
              "format": "double"
            },
            "type": {
              "type": "string",
              "enum": [
                "Cauchy2"
              ]
            }
          }
        },
        {
          "type": "object",
          "required": [
            "a",
            "b",
            "c",
            "d",
            "type"
          ],
          "properties": {
            "a": {
              "type": "number",
              "format": "double"
            },
            "b": {
              "type": "number",
              "format": "double"
            },
            "c": {
              "type": "number",
              "format": "double"
            },
            "d": {
              "type": "number",
              "format": "double"
            },
            "type": {
              "type": "string",
              "enum": [
                "Cauchy4"
              ]
            }
          }
        },
        {
          "description": "Alexey N. Bashkatov and Elina A. Genina \"Water refractive index in dependence on temperature and wavelength: a simple approximation\", Proc. SPIE 5068, Saratov Fall Meeting 2002: Optical Technologies in Biophysics and Medicine IV, (13 October 2003); <https://doi.org/10.1117/12.518857>.",
          "type": "object",
          "required": [
            "type"
          ],
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "Water"
              ]
            }
          }
        },
        {
          "description": "- <https://en.wikipedia.org/wiki/Fused_quartz> - <https://en.wikipedia.org/wiki/Cauchy%27s_equation>",
          "type": "object",
          "required": [
            "type"
          ],
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "FusedQuartz"
              ]
            }
          }
        }
      ]
    },
    "Spectrum": {
      "description": "Absorbs nothing by default.",
      "oneOf": [
        {
          "type": "object",
          "required": [
            "type"
          ],
          "properties": {
            "intensity": {
              "default": 1.0,
              "type": "number",
              "format": "double"
            },
            "type": {
              "type": "string",
              "enum": [
                "Constant"
              ]
            }
          }
        },
        {
          "description": "https://en.wikipedia.org/wiki/Spectral_line_shape#Lorentzian",
          "type": "object",
          "required": [
            "fwhm",
            "maximum_at",
            "type"
          ],
          "properties": {
            "fwhm": {
              "description": "https://en.wikipedia.org/wiki/Full_width_at_half_maximum",
              "type": "number",
              "format": "double"
            },
            "max_intensity": {
              "default": 1.0,
              "type": "number",
              "format": "double"
            },
            "maximum_at": {
              "description": "Wavelength of the maximum, meters.",
              "type": "number",
              "format": "double"
            },
            "type": {
              "type": "string",
              "enum": [
                "Lorentzian"
              ]
            }
          }
        },
        {
          "description": "Black body radiation: https://en.wikipedia.org/wiki/Planck%27s_law.\n\nDo not confuse with black body **absorption** – for the latter use empty reflectance.",
          "type": "object",
          "required": [
            "scale",
            "temperature",
            "type"
          ],
          "properties": {
            "scale": {
              "type": "number",
              "format": "double"
            },
            "temperature": {
              "type": "number",
              "format": "double"
            },
            "type": {
              "type": "string",
              "enum": [
                "BlackBodyRadiation"
              ]
            }
          }
        },
        {
          "description": "Sum of the spectra.",
          "type": "object",
          "required": [
            "spectra",
            "type"
          ],
          "properties": {
            "spectra": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Spectrum"
              }
            },
            "type": {
              "type": "string",
              "enum": [
                "Sum"
              ]
            }
          }
        },
        {
          "description": "Multiplication of the spectra.",
          "type": "object",
          "required": [
            "spectra",
            "type"
          ],
          "properties": {
            "spectra": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Spectrum"
              }
            },
            "type": {
              "type": "string",
              "enum": [
                "Mul"
              ]
            }
          }
        }
      ]
    },
    "Surface": {
      "description": "Surface that is being rendered.",
      "oneOf": [
        {
          "type": "object",
          "required": [
            "center",
            "material",
            "radius",
            "type"
          ],
          "properties": {
            "center": {
              "$ref": "#/definitions/Point"
            },
            "material": {
              "$ref": "#/definitions/Material"
            },
            "radius": {
              "type": "number",
              "format": "double"
            },
            "type": {
              "type": "string",
              "enum": [
                "Sphere"
              ]
            }
          }
        },
        {
          "type": "object",
          "required": [
            "aabb",
            "material",
            "type"
          ],
          "properties": {
            "aabb": {
              "description": "Axis-aligned boundary box.",
              "allOf": [
                {
                  "$ref": "#/definitions/Aabb"
                }
              ]
            },
            "density": {
              "description": "Fog density.",
              "default": 1.0,
              "type": "number",
              "format": "double"
            },
            "material": {
              "$ref": "#/definitions/Material"
            },
            "type": {
              "type": "string",
              "enum": [
                "UniformFog"
              ]
            }
          }
        }
      ]
    },
    "Transmittance": {
      "type": "object",
      "properties": {
        "attenuation": {
          "description": "Attenuation of the body inner material.",
          "allOf": [
            {
              "$ref": "#/definitions/Spectrum"
            }
          ]
        },
        "coefficient": {
          "description": "Attenuation coefficient: <https://en.wikipedia.org/wiki/Attenuation_coefficient>. Considered to be zero by default.",
          "anyOf": [
            {
              "$ref": "#/definitions/Attenuation"
            },
            {
              "type": "null"
            }
          ]
        },
        "refractive_index": {
          "description": "Refractive index of the medium inside the body. By default, this is the index of vacuum.",
          "allOf": [
            {
              "$ref": "#/definitions/RefractiveIndex"
            }
          ]
        }
      }
    }
  }
}
